{
  "name": "houma",
  "version": "1.0.0",
  "description": "Intelligent Automated Reporting",
  "main": "./dist/server.js",
  "scripts": {
    "clean": "rimraf dist",
    "copy-assets": "ts-node tools/copy-assets",
    "tsc": "tsc",
    "build": "npm run copy-assets && npm run tsc",
    "dev": "npm run clean && npm run dev:start",
    "dev:start": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only --require tsconfig-paths/register --project tsconfig.json src/server.ts",
    "local": "npm run clean && npm run local:start",
    "local:start": "cross-env NODE_ENV=local ts-node-dev --respawn --transpile-only --require tsconfig-paths/register --project tsconfig.json src/server.ts",
    "start": "cross-env NODE_ENV=production node .",
    "lint": "eslint \"./src/**/*.ts\"",
    "lint:fix": "eslint \"./src/**/*.ts\" --fix",
    "prepare": "husky",
    "commit": "git-cz",
    "ca": "npm run compile-api-json",
    "compile-api-json": "redocly bundle ./src/docs/openapi-v1.yaml -o ./src/docs/openapi-v1-compiled.json",
    "seed:user": "npx ts-node -r tsconfig-paths/register scripts/seed-user.ts"
  },
  "license": "ISC",
  "dependencies": {
    "@langchain/core": "^1.1.19",
    "@langchain/google-genai": "^2.1.15",
    "axios": "^1.7.3",
    "celebrate": "^15.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^8.2.1",
    "file-type": "^21.3.0",
    "helmet": "^8.1.0",
    "i18n": "^0.15.1",
    "joi": "^18.0.2",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.11.0",
    "multer": "^2.0.2",
    "pdf-parse": "^2.4.5",
    "pdfjs-dist": "^5.4.624",
    "pg": "^8.18.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@redocly/cli": "^2.1.0",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.21",
    "@types/i18n": "^0.13.11",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/module-alias": "^2.0.4",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.14.10",
    "@types/pdf-parse": "^1.1.5",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/winston": "^2.4.4",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "commitizen": "^4.3.0",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "git-cz": "^4.9.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "module-alias": "^2.2.3",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.7",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.5",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "_moduleAliases": {
    "@assets": "dist/assets",
    "@config": "dist/config",
    "@controllers": "dist/controllers",
    "@jobs": "dist/jobs",
    "@middlewares": "dist/middlewares",
    "@models": "dist/models",
    "@routes": "dist/routes",
    "@services": "dist/services",
    "@utils": "dist/utils",
    "@validations": "dist/validations",
    "@interfaces": "dist/interfaces",
    "@repositories": "dist/repositories",
    "@constants": "dist/constants",
    "@docs": "dist/docs",
    "@events": "dist/events"
  }
}
